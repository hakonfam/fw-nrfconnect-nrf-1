menuconfig NSB_CRYPTO
	bool
	prompt "Secure Boot Crypto"

if (NSB_CRYPTO)
config NSB_ECDSA_SECP256R1
	bool
	select FW_ECDSA_SECP256R1
config NSB_RSA_PSS2048
	bool
	select FW_RSA_PSS2048
config NSB_SHA256
	bool
	select FW_SHA256

config NSB_SIGNATURE_LEN
	int
	default 64 if NSB_ECDSA_SECP256R1
	default 256 if NSB_RSA_PSS2048

config NSB_PUBLIC_KEY_LEN
	int
	default 64 if NSB_ECDSA_SECP256R1
	default 256 if NSB_RSA_PSS2048

config NSB_HASH_LEN
	def_int 32

choice NSB_CRYPTO_SIG
	prompt "Firmware verification Algorithm"
	default NSB_CRYPTO_CC310_ECDSA_SECP256R1 if HAS_HW_NRF_CC310
	default NSB_CRYPTO_OBERON_ECDSA_SECP256R1
	help
	  Crypto implementation to use for signature verification of firmware in Bootloader.

	config NSB_CRYPTO_OBERON_ECDSA_SECP256R1
		bool "Software ECDSA secp256r1"
		select NRF_OBERON
		select NSB_ECDSA_SECP256R1
		help
		  Software implementation of ECDSA with NIST curve secp256r1.

	config NSB_CRYPTO_CC310_ECDSA_SECP256R1
		bool "Hardware ECDSA secp256r1" if HAS_HW_NRF_CC310
		select NRF_CC310_BL
		select NSB_ECDSA_SECP256R1
		help
		  Hardware implementation of ECDSA with NIST curve secp256r1.

	#config NSB_CRYPTO_OBERON_RSA_2048
	#	bool #"Software RSA-PSS 2048-bits"
	#	select NRF_OBERON
	#	select NSB_RSA_PSS2048
	#	help
	#	  Software implementation of RSASSA-PSS, 2048-bits.
	#	  Not available yet.

	#config NSB_CRYPTO_CC310_RSA_2048
	#	bool #"Hardware RSA-PSS 2048-bits" if HAS_HW_NRF_CC310
	#	select NRF_CC310_BL
	#	select NSB_RSA_PSS2048
	#	help
	#	  Hardware implementation of RSASSA-PSS, 2048-bits.
	#	  Not available yet.

endchoice

choice NSB_CRYPTO_HASH
	prompt "Hashing Implementation"
	default NSB_CRYPTO_CC310_SHA256 if HAS_HW_NRF_CC310
	default NSB_CRYPTO_OBERON_SHA256
	help
	  Crypto implementation to use for hash generation in Bootloader.

	config NSB_CRYPTO_OBERON_SHA256
		bool "Software SHA256"
		select NRF_OBERON
		select NSB_SHA256
		help
		  Software implementation of SHA256.

	config NSB_CRYPTO_CC310_SHA256
		bool "Hardware SHA256" if HAS_HW_NRF_CC310
		select NRF_CC310_BL
		select NRF_OBERON
		select NSB_SHA256
		help
		  Hardware implementation of SHA256.

endchoice

config NSB_PUBLIC_KEY_HASH_LEN
	int "Public key hash size (bytes)"
	default 16
	help
	  The length to which public key hashes in the list of Root of Trust
	  Public Keys are truncated.

endif # NSB_CRYPTO
